<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_6"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#CFC6C6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvInvoiceDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inv Date"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text=":"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/tvInvoiceDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="24/06/2024"
                android:textColor="@color/black_to_white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/col1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_2"/>


            <TextView
                android:id="@+id/tvInvoiceNoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inv No"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text=":"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/tvInvoiceNoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="I297862"
                android:textColor="@color/black_to_white"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAmountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textColor="@color/black_to_white" />

                    <TextView
                        android:id="@+id/col3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text=":"
                        android:textColor="@color/black_to_white" />

                    <TextView
                        android:id="@+id/tvAmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:text="978623"
                        android:textColor="@color/black_to_white"
                        android:textStyle="bold" />


                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvBalanceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/col4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text=":"
                android:textColor="@color/black_to_white" />

            <TextView
                android:id="@+id/tvBalanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:text="978623"
                android:textColor="@color/black_to_white"
                android:textStyle="bold" />

            </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_2"/>

            <TextView
                android:id="@+id/tvReceivedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received"
                android:textColor="@color/black_to_white" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etReceivedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background"
                android:hint="Enter Amount"
                android:maxLines="1"
                android:textSize="@dimen/sp_16"
                android:inputType="number"
                android:layout_marginStart="@dimen/dp_6"/>


        </LinearLayout>

    </LinearLayout>

</layout>