<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".salesModule.newOrder.CustomerDetailsActivity">

        <LinearLayout
            android:id="@+id/titleBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_12"
                android:src="@drawable/baseline_arrow_back_36_w" />

            <TextView
                android:id="@+id/titleBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_8"
                android:text="Customer Details"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <!--        <ImageView-->
            <!--            android:id="@+id/logo"-->
            <!--            android:layout_width="@dimen/dp_36"-->
            <!--            android:layout_height="@dimen/dp_36"-->
            <!--            android:layout_gravity="center_vertical"-->
            <!--            android:layout_marginStart="@dimen/dp_12"-->
            <!--            android:src="@mipmap/logo_medrep" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="16dp"
            android:text="Customer Name "
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleBarLayout" />

        <TextView
            android:id="@+id/tvCol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerName"
            app:layout_constraintStart_toEndOf="@+id/tvCustomerName"
            app:layout_constraintTop_toTopOf="@+id/tvCustomerName" />

        <TextView
            android:id="@+id/tvCustomerNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginStart="4dp"
            android:text="Sugar Kumar"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerName"
            app:layout_constraintStart_toEndOf="@+id/tvCol1"
            app:layout_constraintTop_toTopOf="@+id/tvCustomerName" />


        <TextView
            android:id="@+id/tvCustomerDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="6dp"
            android:text="Date "
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCustomerName" />

        <TextView
            android:id="@+id/tvCol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerDate"
            app:layout_constraintStart_toEndOf="@+id/tvCustomerName"
            app:layout_constraintTop_toTopOf="@+id/tvCustomerDate" />



        <TextView
            android:id="@+id/tvDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginStart="4dp"
            android:text="22/06/2024"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustomerDate"
            app:layout_constraintStart_toEndOf="@+id/tvCol3"
            app:layout_constraintTop_toTopOf="@+id/tvCustomerDate" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="6dp"
            android:text="Amount "
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCustomerDate" />

        <TextView
            android:id="@+id/tvCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvCol1"
            app:layout_constraintStart_toStartOf="@+id/tvCol1"
            app:layout_constraintTop_toBottomOf="@+id/tvCol3" />

        <TextView
            android:id="@+id/tvAmountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:text="120.00"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/tvAmount"
            app:layout_constraintStart_toEndOf="@+id/tvCol2"
            app:layout_constraintTop_toTopOf="@+id/tvAmount" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAddItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_one"
            android:text="Add Item"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btEditItem"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btEditItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_one"
            android:text="Edit Item"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/btAddItem"
            app:layout_constraintEnd_toStartOf="@id/btOutStanding"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btOutStanding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_one"
            android:text="OutStanding"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btEditItem"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

        <TextView
            android:id="@+id/tvTitleAddedItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="6dp"
            android:text="Added Items"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btAddItem" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddedItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleAddedItems" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
